{
  "extends": ["next/core-web-vitals", "airbnb-base"],
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": false,
      "tsx": true
    }
  },
  "rules": {
    "import/extensions": "off", // import시 확장자명을 사용하지 않음
    "no-unused-vars": "warn", // 일단 warn으로
    "arrow-body-style": "off", // 화살표함수는 중괄호없이 작성: 가독성에 문제있어 off
    "no-else-return": "off", // else문을 사용하지 않고 return을 사용: 실효성 없어 off
    "object-curly-newline": "off", // 객체를 여러줄로 작성: 불필요한 코드 늘어남으로 off
    "no-console": "off", // console 사용 허용
    "quotes": "off", // 따옴표를 사용하지 않음: ` 사용 못해서 off
    "import/no-extraneous-dependencies": "warn", // 환경에 따라 의존성 사용 제한
    "import/prefer-default-export": "off", // export defualt 강제: 실효성 없어 off
    "no-alert": "warn", // alert 사용 허용, 추후 dialog로 대체 후 제거
    "react/display-name": "warn", // displayName 사용 강제: warn 처리후 추후 개선
    "consistent-return": "off" // 함수에 무조건 return을 사용: 필요없음
  }
}
